import pandas as pd

lc_file = pd.read_csv('../data/kleiner_data/Run4_C4_2000ng_rbf_lc-retention-times.csv')

lc_file_peps = lc_file['peptide_sequence'].tolist()
print(lc_file_peps)
list_no_n_term = [i.split('-', 1)[1] for i in lc_file_peps]
list_no_c_term = [i.split('-', 1)[0] for i in list_no_n_term]

ofile = open('../data/kleiner_data/Run4_C4_2000ng_rbf_lc-retention-times.fasta', 'w')

for i in range(len(list_no_c_term)):
    ofile.write(">" + list_no_c_term[i] + "\n" + list_no_c_term[i] + "\n")
ofile.close()
